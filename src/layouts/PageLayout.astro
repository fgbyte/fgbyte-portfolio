---
import "@styles/global.css";
import BaseHead from "@components/BaseHead.astro";
import Drawer from "@components/Drawer.astro";
import Footer from "@components/Footer.astro";
import Header from "@components/Header.astro";
const { title, description } = Astro.props;
import { SITE } from "@consts";
import { cn } from "@lib/utils";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`${title} | ${SITE.TITLE}`} description={description} />
  </head>
  <body class="relative">
    <Header />
    <Drawer />
    <main>
      <slot />
    </main>
    <Footer />
   
  </body>
   <button id="drawer-theme-button" aria-label={`Toggle light and dark theme`} class={cn(" fixed bottom-8 right-6  md:hidden", "size-9 rounded-full p-2 items-center justify-center", "bg-transparent hover:bg-black/5 dark:hover:bg-white/20", "stroke-current hover:stroke-black hover:dark:stroke-white", "border border-black/10 dark:border-white/25", "transition-colors duration-300 ease-in-out")}>
        <svg class="size-full block dark:hidden">
          <use href="/ui.svg#sun"></use>
        </svg>
        <svg class="size-full hidden dark:block">
          <use href="/ui.svg#moon"></use>
        </svg>
      </button>
</html>
