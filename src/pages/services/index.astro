---
import { getCollection } from "astro:content"
import PageLayout from "@layouts/PageLayout.astro"
import TopLayout from "@layouts/TopLayout.astro"
import BottomLayout from "@layouts/BottomLayout.astro"
import Services from "@components/Services"
import { SERVICES } from "@consts"

const services = (await getCollection("services"))
  .filter(service => !service.data.draft)
  .sort((a, b) => b.data.date.getTime() - a.data.date.getTime())

const tags = [...new Set(services.flatMap(service => service.data.tags))]
  .sort((a, b) => a.localeCompare(b))
---

<PageLayout title={SERVICES.TITLE} description={SERVICES.DESCRIPTION}>
  <TopLayout>
    <div class="animate page-heading">
      {SERVICES.TITLE}
    </div>
  </TopLayout>
  <BottomLayout>
    <div class="animate">
      <Services client:load tags={tags} data={services} />
    </div>
  </BottomLayout>
</PageLayout>
